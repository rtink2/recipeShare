<%= render 'shared/page_title', title: "showing all recipes" %>
<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for(recipe.chef, size: 120) %>
      </section>
    </div>
    <div class="col-md-8 card card-body mb-2">
      <h4><%= link_to recipe.name.capitalize, recipe_path(recipe) %></h4>
      <p><%= truncate(recipe.description.capitalize, length: 150) %></p>
      <p>
        <span class="quiet"><small>Created

            <%= time_ago_in_words(recipe.created_at) %>

           ago</small></span>
      </p>
    </div>
  </div>
<% end %>