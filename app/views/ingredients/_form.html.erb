<%= render 'shared/errors', obj: @ingredient %>

<div class="container-fluid h-100">
<div class="row justify-content-center align-items-center h-100">
  <div class="col-6">
  	 <div class="card my-3 bg-c-gradient">
          <div class="card-body">
    				<%= form_for(@ingredient, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      			<div class="form-group form-label-group">
        			<div class="control-label col-2">
          			<%= f.label :name %>
        			</div>
        			<div class="col-12">
          			<%= f.text_field :name, class: "form-control", placeholder: "Enter ingredient", autofocus: true %>
        			</div>
      			</div>
      			<div class="form-group form-label-group">
        			<div class="col-md-offset-2 col-md-10">
								<%= f.submit(@ingredient.new_record? ? "Add Ingredient" : "Update Ingredient",
											class: "btn btn-info spBtn text-uppercase", id: 'specialButton') %>
        			</div>
      			</div>
    			<% end %>
    			<div class="col-10 cancel">
      			[ <%= link_to "Cancel request and return to recipes list", recipes_path %> ]
    			</div>
  			</div>
			</div>
		</div>
	</div>
</div>

